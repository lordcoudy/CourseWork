<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_host"
    app:startDestination="@id/registrationFragment1">

    <fragment
        android:id="@+id/registrationFragment1"
        android:name="com.milord.coursework.auth.registration.RegistrationFragment1"
        android:label="fragment_registration1"
        tools:layout="@layout/fragment_registration1" >
        <action
            android:id="@+id/action_registrationFragment1_to_registrationFragment2"
            app:destination="@id/registrationFragment2" />
    </fragment>
    <fragment
        android:id="@+id/registrationFragment2"
        android:name="com.milord.coursework.auth.registration.RegistrationFragment2"
        android:label="fragment_registration2"
        tools:layout="@layout/fragment_registration2" >
        <action
            android:id="@+id/action_registrationFragment2_to_registrationFragment3"
            app:destination="@id/registrationFragment3" />
        <action
            android:id="@+id/action_registrationFragment2_to_registrationFragment1"
            app:destination="@id/registrationFragment1" />
    </fragment>
    <fragment
        android:id="@+id/registrationFragment3"
        android:name="com.milord.coursework.auth.registration.RegistrationFragment3"
        android:label="fragment_registration3"
        tools:layout="@layout/fragment_registration3" >
        <action
            android:id="@+id/action_registrationFragment3_to_registrationFragment2"
            app:destination="@id/registrationFragment2" />
    </fragment>
</navigation>